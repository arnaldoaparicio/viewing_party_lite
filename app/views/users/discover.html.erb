<h1>Viewing Party Lite</h1>

<h2>Discover Movies</h2>

<%= button_to "Find Top Rated Movies", "/users/#{@user.id}/movies#{@params}", params: {q: "top rated"}, method: :get %>

<h3>OR </h3>

<%= form_with url: "/users/#{@user.id}/movies", method: :get, local: true do |f| %>
  <%= f.label :query %>
  <%= f.text_field :query, params: {search: :query}, :placeholder => "Search by movie title" %>
  <%= f.submit "Find Movies" %>
  <% end %>


