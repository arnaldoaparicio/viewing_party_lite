<h1>Viewing Party Lite</h1>
<% if current_user %>
<h2><%= @user.name %>'s Dashboard</h2>

<div class="movie-discovery">
  <%= button_to "Discover Movies", "/discover", method: :get %>
</div>

<div class="viewing-parties">
  <% if @user.viewing_parties != nil %>
    <% @user.viewing_parties.each do |party| %>

      <%= image_tag("#{party.image_url}") %>

      <p><%= party.movie_title %></p>
      <p><%= party.when %></p>
      <p><%= party.time %></p>
      <% party.user_parties.hosting(@user).each do |up|%>
          <p>Hosting</p>
        <% end %>
      <% party.user_parties.invited(@user).each do |up|%>
          <p>Invited</p>
        <% end %>
    <% end %>
  <% end %>
 <% end %>
</div>
