<h1>Viewing Party Lite</h1>
<h2><%= @user.name %>'s Dashboard</h2>

<div class="movie-discovery">
  <%= button_to "Discover Movies", "/users/#{@user.id}/discover", method: :get %>
</div>

<div class="viewing-parties">
  <% if @user.viewing_parties != nil %>
    <% @user.viewing_parties.each do |party| %>

      <%= image_tag("#{party.image_url}") %>

      <p><%= party.movie_title %></p>
      <p><%= party.when %></p>
      <p><%= party.time %></p>
      <% @user_party.each do |up|%>
        <% if up.user_id == @user.id && up.host == true && up.viewing_party_id == party.id %>
          <p>Hosting</p>
          <% else %>
          <p>Invited</p>
          
    <% end %>
    <% end %>
    <% end %>
  <% end %>
</div>
