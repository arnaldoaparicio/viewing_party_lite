<h1>Viewing Party Lite</h1>

<h2>Create a Movie Party for <%= @movie.title %></h2>

<%= form_with model: @viewing_party, local: true do |f| %>
  <%= f.label :duration %>
  <%= f.text_field :duration, :placeholder => @movie[:runtime] %>

  <%= f.label :when %>
  <%= f.date_field :when %>

  <%= f.label :time %>
  <%= f.text_field :time %>

  <%= f.checkbox %>
  <% end %>
